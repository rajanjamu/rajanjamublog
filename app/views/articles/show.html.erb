<div id="articles_show">
	<div class="container">
		<div class="row">
			<div class="col-sm-8 col-sm-offset-2">
				<h1><%= @article.title %></h1>
				<p class="font-para"><%= @article.body %></p>
				<p><%= link_to("Home", articles_path) %> | <%= link_to 'Edit', edit_article_path(@article) %></p>
				<hr>
				<%= render @article.comments %>
				<h4>Add a comment:</h4>
				<%= render 'comments/form' %>
			</div>
		</div>
	</div>
</div>