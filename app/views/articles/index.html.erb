<div id="articles_index">
	<div class="container">
	<%= link_to("Create New Article", new_article_path, class: 'btn btn-default') %>
		<div class="row">
			<div class="col-sm-6">
				<% @articles.each do |article| %>
					<h2><%= link_to article.title, article_path(article) %></h2>
					<p><%= article.created_at.strftime("%b %d, %Y") %></p>
					<p><%= article.body %></p>
					<p><%= link_to 'Edit', edit_article_path(article) %> | <%= link_to 'Delete', article_path(article), method: :delete, data:  { confirm: 'Are you sure?' } %></p>
				<% end %>
			</div>
		</div>
	</div>
</div>